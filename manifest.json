{
    "manifest_version": 2,

    "name": "Which host",
    "description": "show the IP of matched hostnames",
    "version": "0.2",
    "author": "loveky",

    "icons": {
        "48": "icon.png",
        "128": "icon128.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "setting.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "css": ["which_host.css"],
            "js": ["which_host.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "webRequest",
        "tabs",
        "*://*/"
    ],

    "homepage_url": "https://github.com/loveky/which_host"
}